{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_USE_VERTEX": "1",
    "CLOUD_ML_REGION": "global",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "claude-haiku-4-5@20251001",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "claude-opus-4-5@20251101"
  },
  "permissions": {
    "allow": [
      "Bash(ls *)",
      "Bash(eza *)",
      "Bash(cat *)",
      "Bash(pwd *)",
      "Bash(cd *)",
      "Bash(find *)",
      "Bash(fd *)",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(jq *)",
      "Bash(mkdir *)",
      "Bash(git --no-pager diff *)",
      "Bash(git --no-pager log *)",
      "Bash(git merge-base *)",
      "Bash(git ls-tree *)",
      "Bash(git show *)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:docs.astral.sh)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "Bash(uv run ruff check *)",
      "Bash(uv run ruff format *)",
      "Bash(uv run mypy *)",
      "Bash(uv run pytest *)",
      "Bash(npm run build)",
      "Bash(npm run lint)",
      "Bash(npm run format)",
      "Bash(pnpm install *)",
      "Bash(pnpm build)",
      "Bash(pnpm test)",
      "Bash(pnpm format)",
      "Bash(pnpm lint)",
      "Bash(pnpm check)",
      "Bash(pnpm run type-check *)",
      "Bash(pnpm run check *)",
      "Bash(pnpm run lint *)"
    ],
    "deny": ["Bash(sudo *)"],
    "ask": ["Bash(git push *)", "Bash(rm *)"],
    "defaultMode": "plan"
  },
  "model": "opusplan",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Codeが許可を求めています\" with title \"Claude Code\" subtitle \"確認待ち\" sound name \"Glass\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"タスクが完了しました\" with title \"Claude Code\" subtitle \"処理終了\" sound name \"Hero\"'"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true
  },
  "language": "日本語"
}
