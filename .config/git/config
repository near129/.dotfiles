    features = side-by-side line-numbers
    syntax-theme = Nord

[delta "line-numbers"]
    line-numbers-left-style = cyan
    line-numbers-right-style = cyan
    line-numbers-minus-style = 124
    line-numbers-plus-style = 28

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
